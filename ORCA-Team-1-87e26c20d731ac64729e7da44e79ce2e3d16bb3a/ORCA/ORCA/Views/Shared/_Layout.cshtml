<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .navbar {
            background-color: green;
        }

        .navbar-collapse {
            position: absolute;
            right: 200px;
        }

        img {
            position: absolute;
            padding: 10px;
            left: 40px;
            top: 45px;
        }

        .top {
            border-style: solid;
            border-width: 47px;
            color: lightgray;
        }

        ol {
            position: absolute;
            right: 100px;
            color: yellow;
        }
    </style>


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>


                @Html.Partial("_LoginPartial")

            </div>
        </div>
    </div>
    <div class="top lists">
        <a href="http://www.marshall.edu/home/index.html">
            <img src="http://www.marshall.edu/home/img/main/mu_logo_blk.png" width="150" height="100" />
        </a>

        <ol class="nav navbar-nav">
            <li><a href="http://www.marshall.edu/home/about">About Marshall</a></li>
            <li><a href="http://www.marshall.edu/home/futurestudents">Future Students</a></li>
            <li><a href="http://www.marshall.edu/home/students">Curent Students</a></li>
            <li><a href="http://www.herdalum.com/s/1269/start.aspx">Alumni</a></li>
            <li><a href="http://www.marshall.edu/home/facultystaff">Faculaty/Staff</a></li>
        </ol>
    </div>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
